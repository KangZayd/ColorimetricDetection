<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity" >
    
	<TextView
    android:id="@+id/myImageViewText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/myImageView"
    android:layout_alignTop="@+id/myImageView"
    android:layout_alignRight="@+id/myImageView"
    android:layout_alignBottom="@+id/myImageView"
    android:layout_margin="1dp"
    android:gravity="center"
    android:text=""
    android:textSize="14sp"
    android:textColor="#000000" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imVCature_pic"
        android:background="#dcdcdc"
        android:gravity="center"
        android:text="Scan Test Strip"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imVCature_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myImageViewText"
        android:contentDescription="catured picture"
        android:src="@drawable/camera" />
<Button
        android:id="@+id/instruct"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnCapture"
        android:layout_marginTop="14dp"
        android:background="#dcdcdc"
        android:gravity="center"
        android:text="Instructions"
        android:textSize="18sp" />

<Button
    android:id="@+id/viewRes"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_alignLeft="@+id/myImageViewText"
    android:layout_alignRight="@+id/myImageViewText"
    android:layout_below="@+id/instruct"
    android:layout_marginTop="14dp"
    android:background="#dcdcdc"
    android:gravity="center"
    android:text="View Results"
    android:textSize="18sp" />

</RelativeLayout>
